#!/usr/bin/env bash

LIB_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)/../lib"

FILENAME=${1}
OUTPUT_FILENAME=${FILENAME%.*}-eph.ll

ARGSPEC_FILE=${2}

[[ -z ${ARGSPEC_FILE} ]] && echo "missing func arg specification file" && exit 1

opt \
  -load ${LIB_DIR}/@PASS_SO_NAME@ \
  -S \
  -eph-encapsulate \
  -eph-iterations=10 \
  -eph-argspec-json=${ARGSPEC_FILE} \
  -debug-only=eph-symenc \
  -o ${OUTPUT_FILENAME} \
  ${FILENAME}

